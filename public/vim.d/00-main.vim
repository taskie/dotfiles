set ignorecase
set smartcase
set incsearch

set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set backspace=indent,eol,start

set mouse=a

set clipboard=unnamed

set wildmenu wildmode=list:full

set showmatch
set matchtime=1

set cursorline
highlight StatusLine term=none cterm=none ctermfg=black ctermbg=gray
highlight CursorLine term=none cterm=none ctermfg=none ctermbg=153

set completeopt=menu
set autowrite

filetype off
